
<%= simple_form_for @requirement, remote: true do |form| %>
  <% if requirement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(requirement.errors.count, "error") %> prohibited this requirement from being saved:</h2>

      <ul>
      <% requirement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% @vaccinations.each do |vacc| %>
    <div class="form-inputs req-inputs">
      <div class='req-title'>
        <%= form.input :title, input_html: { value: "#{vacc.title}" } %>
      </div>
      <div class='req-datepicker'>
        <%= form.input :date_range, input_html: { class: "form-control input-sm date-range-picker" } %>
      </div>
      <div class='req-date'>
        <%= form.input_field :start, value: Date.today, class: 'form-control input-sm start_hidden req-ind-date' %>
        <%= form.input_field :end, value: Date.today, class: 'form-control input-sm end_hidden req-ind-date' %>
      </div>     
    </div>
  <% end %>
  
  <%= form.button :submit %>
  
<% end %>

